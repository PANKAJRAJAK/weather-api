<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Ensure iisnode is used to run the Node entrypoint on Windows App Service -->
    <handlers>
      <add name="iisnode" path="Weather.js" verb="*" modules="iisnode" resourceType="Unspecified"/>
    </handlers>

    <rewrite>
      <rules>
        <!-- If request is not a file, route it to the Node entrypoint -->
        <rule name="DynamicContent">
          <match url="(.*)" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
          </conditions>
          <action type="Rewrite" url="Weather.js" />
        </rule>
      </rules>
    </rewrite>

    <security>
      <requestFiltering>
        <hiddenSegments>
          <add segment="bin" />
        </hiddenSegments>
      </requestFiltering>
    </security>

    <!-- Enable iisnode logging for easier diagnostics in Azure -->
    <iisnode loggingEnabled="true" devErrorsEnabled="true" />
  </system.webServer>
</configuration>
